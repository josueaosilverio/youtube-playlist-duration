{
  "manifest_version": 3,
  "name": "YouTube Playlist Total Duration",
  "version": "1.0",
  "description": "Calculates and displays total playlist runtime on YouTube.",
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/playlist?*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "128": "icons/icon.png"
  },
  "permissions": [],
  "host_permissions": ["https://www.youtube.com/playlist?*"]
}
